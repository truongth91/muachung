<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="product-field">
    <%= form.label :title %>
    <%= form.text_field :title, :size => 75 %>
  </div>

  <div class="product-field">
    <%= form.label :description %>
    <%= form.text_area :description, :rows => 6, :cols => 80 %>
  </div>

  <div class="product-field">
    <%= form.label :"Image's name in asset folder" %>
    <%= form.text_field :image_url, :size => 75 %>
  </div>

  <div class="product-field">
    <%= form.label :price %>
    <%= form.text_field :price, :size => 75  %>
  </div>
  </br>
  <div class="link">
    <%= form.submit %>
    <%= link_to '<button type="button">Back to product</button>'.html_safe, products_path %>
  </div>
  
<% end %>
